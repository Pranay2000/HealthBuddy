<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#373737">

    <ImageView
        android:layout_width="184dp"
        android:layout_height="92dp"
        android:layout_marginLeft="-5dp"
        android:src="@drawable/semi_circle" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="253dp"
        android:layout_height="158dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:src="@drawable/semi_circle" />

    <ImageView
        android:layout_width="184dp"
        android:layout_height="92dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-10dp"
        android:src="@drawable/semi_circle" />

    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src=""
        android:layout_margin="16dp"
        android:tint="@color/white" />
    -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="377dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="@dimen/elevation_16"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/elevation_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Forgot Password"
            android:textColor="@color/white"
            android:textSize="@dimen/height_25"
            android:textStyle="bold" />

        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_margin="4dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_10"
            android:fontFamily="@font/open_sans"
            android:text="Enter the registered Email address and check your mail for further instructions"
            android:textColor="@color/white"
            android:textSize="@dimen/elevation_17" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_25"
            android:backgroundTint="#3D3D3D"
            android:orientation="vertical"
            android:padding="@dimen/height_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:paddingLeft="@dimen/elevation_16"
                android:paddingTop="4dp"
                android:text="EMAIL"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/registeredEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3D3D3D"
                android:hint="example@gmail.com"
                android:paddingLeft="@dimen/elevation_16"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey_500" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_25"
            android:background="@drawable/custom_gradient_button"
            android:fontFamily="@font/open_sans"
            android:text="Reset Password"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_bottom_layer" />
</RelativeLayout>